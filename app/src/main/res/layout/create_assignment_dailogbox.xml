<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mclaren"
            android:layout_gravity="center_horizontal"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_assignment_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assignment Name"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/txt_dailog_assignment_name"

                android:fontFamily="@font/mclaren"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_assignment_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subject Name"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/txt_dailog_subject_name"

                android:fontFamily="@font/mclaren"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"

            app:startIconDrawable="@drawable/ic_link"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Google Drive Link"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/txt_dailog_assignment_link"

                android:fontFamily="@font/mclaren"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_ok"
            android:text="OK"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/mclaren"
            android:background="@drawable/round_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"/>


    </LinearLayout>



</RelativeLayout>